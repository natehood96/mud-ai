{
  "name": "mud-ai",
  "version": "1.0.0",
  "description": "A MUD game with TypeScript backend and React frontend",
  "type": "module",
  "scripts": {
    "dev:client": "vite",
    "dev:server": "tsx --watch server/index.ts",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "vite build && esbuild server/index.ts --platform=node --bundle --format=esm --outdir=dist --external:pg-native",
    "start": "NODE_ENV=production node dist/index.js",
    "db:generate": "dotenv -e .env.development -- drizzle-kit generate",
    "db:migrate": "dotenv -e .env.development -- drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "mud",
    "game",
    "typescript",
    "react"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.7",
    "express": "^4.18.2",
    "openai": "^4.20.0",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.6",
    "esbuild": "^0.19.10",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
